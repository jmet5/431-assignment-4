<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= button_to 'Show Book Details', book_path(book), method: 'get'%></td>
      <td><%= button_to 'Update Book', edit_book_path(book), method: 'get'%></td>
      <td><%= button_to 'Delete Book', book_path(book), method: 'delete', data: { confirm: 'Are you sure you want to delete?' } %></td>
  <% end %>
</table>
<%= button_to 'Add a Book', new_book_path, method: 'get'%>
